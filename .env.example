# TikTok Seeding Detection API Configuration

# Application Settings
APP_NAME="TikTok Seeding Detection API"
APP_VERSION="1.0.0"
DEBUG=false

# Server Configuration
HOST="0.0.0.0"
PORT=8000
RELOAD=true

# CORS Configuration
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# ML Model Configuration
HUGGINGFACE_API_URL="https://api-inference.huggingface.co/models/minhhieu2610/visobert_comments_seeding"
HUGGINGFACE_TOKEN="your-huggingface-token"
MODEL_TIMEOUT=30

# TikTok API Configuration
TIKTOK_API_TIMEOUT=30
MAX_COMMENTS_PER_VIDEO=500

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=[".json", ".csv"]

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Security
SECRET_KEY="your-secret-key-change-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Analysis Configuration
MAX_BATCH_SIZE=1000
CONFIDENCE_THRESHOLD=0.5

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="json"